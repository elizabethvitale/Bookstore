<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

<display-name>UGA BOOKSTORE</display-name>
	<servlet>
		<servlet-name>userLogin</servlet-name>
		<servlet-class>com.ugabookstore.userLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userLogin</servlet-name>
		<url-pattern>/userLogin</url-pattern>
	</servlet-mapping>


        <servlet>
                <servlet-name>register</servlet-name>
                <servlet-class>com.ugabookstore.register</servlet-class>
        </servlet>
        <servlet-mapping>
                <servlet-name>register</servlet-name>
                <url-pattern>/register</url-pattern>
        </servlet-mapping>

        <servlet>
                <servlet-name>confirm</servlet-name>
                <servlet-class>com.ugabookstore.confirm</servlet-class>
        </servlet>
        <servlet-mapping>
                <servlet-name>confirm</servlet-name>
                <url-pattern>/confirm</url-pattern>
        </servlet-mapping>
	        <servlet>
                <servlet-name>reset</servlet-name>
                <servlet-class>com.ugabookstore.reset</servlet-class>
        </servlet>
        <servlet-mapping>
                <servlet-name>reset</servlet-name>
                <url-pattern>/reset</url-pattern>
        </servlet-mapping>





</web-app>
